<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane prefHeight="500.0" prefWidth="812.0" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="434.0" minWidth="10.0" prefWidth="422.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="381.0" minWidth="266.0" prefWidth="278.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <TableView fx:id="requestTableView" />
        <VBox spacing="20.0" GridPane.columnIndex="1">
            <Label alignment="CENTER" prefHeight="36.0" prefWidth="295.0" text="Заявки пользователя" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <AnchorPane>
                <children>
                    <Button mnemonicParsing="false" onAction="#onCreateRequest" prefHeight="40.0" text="Добавить" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </children>
            </AnchorPane>
            <AnchorPane layoutX="20.0" layoutY="76.0">
                <children>
                    <Button mnemonicParsing="false" onAction="#onEditRequest" prefHeight="40.0" text="Изменить" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </children>
            </AnchorPane>
            <AnchorPane layoutX="20.0" layoutY="136.0">
                <children>
                    <Button mnemonicParsing="false" onAction="#onDeleteRequest" prefHeight="40.0" text="Удалить" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </children>
            </AnchorPane>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </GridPane>
</VBox>
