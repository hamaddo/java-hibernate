<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.nstu.controllers.MainController">
    <GridPane hgap="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="589.0" minWidth="10.0" prefWidth="425.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="355.0" minWidth="10.0" prefWidth="243.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="378.0"
                            vgrow="ALWAYS"/>
        </rowConstraints>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <TableView fx:id="employerTableView">
            <columns>
            </columns>
        </TableView>
        <AnchorPane GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
            <VBox spacing="15.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <Label alignment="CENTER" prefHeight="36.0" prefWidth="295.0" text="Работодатели"
                       textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <VBox spacing="30.0">
                    <VBox spacing="10.0">
                        <TextField fx:id="employerSearchbarInput" onKeyTyped="#onEmployerSearchbarChange"
                                   prefHeight="40.0"/>
                        <AnchorPane prefHeight="20.0">
                            <Button onAction="#onFindEmployerByName" alignment="CENTER" contentDisplay="CENTER"
                                    mnemonicParsing="false" text="По названию компании" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                    AnchorPane.topAnchor="0.0"/>
                        </AnchorPane>
                        <AnchorPane layoutX="10.0" layoutY="60.0" prefHeight="20.0">
                            <Button onAction="#onFindEmployerByOwnershipType" alignment="CENTER"
                                    contentDisplay="CENTER" mnemonicParsing="false" text="По организационной форме"
                                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                        </AnchorPane>
                        <AnchorPane layoutX="10.0" layoutY="90.0" prefHeight="20.0">
                            <Button onAction="#onFindEmployerByPhone" alignment="CENTER"
                                    contentDisplay="CENTER" mnemonicParsing="false" text="По номеру"
                                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                        </AnchorPane>
                    </VBox>
                    <AnchorPane prefHeight="40.0">
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                onAction="#onCreateEmployerButtonClick" text="Добавить"
                                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </AnchorPane>
                    <AnchorPane layoutX="10.0" layoutY="230.0" prefHeight="40.0">
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                onAction="#onChangeEmployerButtonClick" text="Изменить"
                                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </AnchorPane>
                    <AnchorPane layoutX="10.0" layoutY="280.0" prefHeight="40.0">
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                onAction="#onDeleteEmployerButtonClick" text="Удалить"
                                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </AnchorPane>
                </VBox>
            </VBox>
        </AnchorPane>
    </GridPane>
</AnchorPane>
